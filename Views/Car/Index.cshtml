@model IEnumerable<Car_System.Models.Car>
@{
    ViewData["Title"] = "Car";
}
<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="mt-3 p-3 shadow rounded">
                <div class="d-flex justify-content-between mb-3 p-3">
                    <h3 class="text-info">Car List</h3>
                    @Html.ActionLink("Add New Car", "Add" , "Car", null, new{@class="btn btn-sm btn-primary"})
                </div>
                <div class="p-3">
                    <table class="table table-responsive table-bordered text-center">
                        <thead class="text-info">
                            <tr>
                                <th>Id</th>
                                <th>Brand</th>
                                <th>Model</th>
                                <th>Seating Capacity</th>
                                <th>Engine</th>
                                <th>Fuel Type</th>
                                <th>Passing Year</th>
                                <th>Car Number</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Id</td>
                                    <td>@item.Brand</td>
                                    <td>@item.Model</td>
                                    <td>@item.SeatingCapacity</td>
                                    <td>@item.Engine</td>
                                    <td>@item.FuelType</td>
                                    <td>@item.PassingYear</td>
                                    <td>@item.CarNumber</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
