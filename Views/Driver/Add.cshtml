@model Car_System.Models.Driver
@{
    ViewData["Title"] = "Add Driver";
}
<div class="container">
    <div class="row">
        <div class="col-6 offset-3">
            <div class="mt-3 p-2 shadow rounded">
                <div class="text-center border-bottom">
                    <h2 class="text-info">Add Driver</h2>
                </div>
                <div>
                    @Html.ValidationSummary()
                </div>
                <div class="mt-3 p-3">
                    <form action="/Driver/Add" method="post" enctype="multipart/form-data" autocomplete="off">
                        <div class="mb-3 row">
                            <label class="col-3 col-form-label text-info">Name</label>
                            <div class="col-9">
                                @Html.TextBoxFor(m => m.Name, new {@class="form-control",placeholder="Enter Name"})
                            </div>
                        </div>
                        <div class="mb-3 row">
                            <label class="col-3 col-form-label text-info">Address</label>
                            <div class="col-9">
                                @Html.TextAreaFor(m => m.Address, new {@class="form-control",placeholder="Enter Address"})
                            </div>
                        </div>
                        <div class="mb-3 row">
                            <label class="col-3 col-form-label text-info">Mobile Number</label>
                            <div class="col-9">
                                @Html.TextBoxFor(m => m.MobileNo, new {@class="form-control",placeholder="Enter Mobile Number"})
                            </div>
                        </div>
                        <div class="mb-3 row">
                            <label class="col-3 col-form-label text-info">Age</label>
                            <div class="col-9">
                                @Html.TextBoxFor(m => m.Age, new {@class="form-control",placeholder="Enter Age"})
                            </div>
                        </div>
                        <div class="mb-3 row">
                            <label class="col-3 col-form-label text-info">Experince</label>
                            <div class="col-9">
                                @Html.TextBoxFor(m => m.Experince, new {@class="form-control",placeholder="Enter Experience"})
                            </div>
                        </div>
                        <div class="mb-3 row">
                            <label class="col-3 col-form-label text-info">Driver Image</label>
                            <div class="col-9">
                                @Html.TextBoxFor(m => m.DriverImage, new {@class="form-control",type="file"})
                            </div>
                        </div>
                        <div class="mb-3">
                            <button class="btn btn-sm p-2 btn-dark" type="reset">Clear</button>
                            <button class="btn btn-sm p-2 btn-success" type="submit">Add</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script type="text/javascript">
    function showAlert(){
        if('@ViewBag.isSaved' == 'True'){
            alert("New Driver Successfully Added");
        }
    }
    $(document).ready(function (){
        showAlert();
    })
</script>