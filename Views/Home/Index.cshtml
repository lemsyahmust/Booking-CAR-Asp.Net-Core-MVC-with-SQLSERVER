<div class="container">
    <div class="row">
        <div class="mt-3 p-3 shadow rounded">
            <div class="carousel slide" id="carouselExampleSlidesOnly" data-bs-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="~/images/carousel/image011.jpg" class="w-100 d-block" style="height: 350px;" />
                    </div>
                    <div class="carousel-item">
                        <img src="~/images/carousel/image022.jpg" class="w-100 d-block" style="height: 350px;" />
                    </div>
                    <div class="carousel-item">
                        <img src="~/images/carousel/image033.jpg" class="w-100 d-block" style="height: 350px;" />
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        @foreach (var item in Model.ToList())
        {
            <div class="col-4">
                <div class="mt-2 p-3 shadow rounded">
                    <div class="card" style="height:350px">
                        <img src="~/images/cars/@item.ImagePath" class="card-img-top h-50"/>
                        <div class="card-body">
                            <h5 class="text-info">@item.Brand @item.Model</h5>
                            <p class="card-text"><span class="fw-bold">Engine</span> @item.Engine</p>
                            <p class="card-text"><span class="fw-bold">Fuel Type</span> @item.FuelType</p>
                            <p class="card-text"><span class="fw-bold">Seating Capacity</span> @item.SeatingCapacity</p>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>